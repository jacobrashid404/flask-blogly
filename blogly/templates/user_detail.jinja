{% extends 'base.jinja'%}

{% block title %} User Details {% endblock %}

{% block content %}

<!-- two buttons, one text line, one area for image-->
<img src="{{ user.img_url }}" height="auto" width="200px">
<h2>{{ user.full_name }}</h2>

<a class="btn btn-primary" href="/users/{{ user.id }}/edit" role="button">Edit</a>
<a class="btn btn-danger" href="/users/{{ user.id }}/delete" role="button">Delete</a>

{% endblock %}