{% extends "base.jinja" %}
{% block title %}Add New User{% endblock %}
{% block content %}

<h2>Create a User</h2>

    <form action="" method="POST" name="new_user_form">
        <div class="form-group">
            <label>First Name
                <input type="text" name="first_name" class="form-control" placeholder="Enter a first name" required>
            </label>
        </div>
        <div class="form-group">
            <label>Last Name
                <input type="text" name="last_name" class="form-control" placeholder="Enter a last name" required>
            </label>
        </div>
        <div class="form-group">
            <label>Image URL
                <input type="url" name="user_image" class="form-control" placeholder="Enter an image URL for the user" required>
            </label>
        </div>
        <button type="submit" class="btn btn-success">Add</button>
    </form>

  {% endblock %}
