{% extends 'base.jinja' %}

{% block title %} User Edit Page {% endblock %}

{% block content %}

<h2>Edit a User</h2>

<form method="POST">

<div class="form-group">
    <label>
        <input class="form-control" name="first_name" type="text" value="{{ user.first_name }}">
    </label>
</div>

<div class="form-group">
    <label>
      <input class="form-control" name="last_name" type="text" value="{{ user.last_name }}">
    </label>
</div>

<div class="form-group">
    <label>
        <input class="form-control" name="img_url" type="url" value="{{ user.img_url }}">
    </label>
</div>

<a class="btn btn-outline-danger" href="/users/{{ user.id }}" role="button">Cancel</a>
<button type="submit" class="btn btn-success">Save</button>
</form>

{% endblock %}